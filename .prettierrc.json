{
  "singleQuote": true,
  "semi": false,
  "tabWidth": 2,
  "trailingCommas": "es5",
  "printWidth": 120,
  "useTabs": false,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^[./]",
    "(~/components/)",
    "~/modules/",
    "~/contexts/",
    "~/hooks/",
    "~/services",
    "~/utils/",
    "(.css)"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
